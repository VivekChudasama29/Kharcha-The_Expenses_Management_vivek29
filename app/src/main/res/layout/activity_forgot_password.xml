<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="20dp"
    android:orientation="horizontal"
    tools:context=".Activity.forgot_password">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="20dp">

            <ImageView
                android:id="@+id/back"
                android:layout_width="41dp"
                android:layout_height="36dp"
                app:srcCompat="@drawable/back" />

            <ImageView
                android:id="@+id/forget_image"
                android:layout_width="wrap_content"
                android:layout_height="239dp"
                app:srcCompat="@drawable/forget_password" />

            <TextView
                android:id="@+id/forgot"
                android:layout_width="141dp"
                android:layout_height="99dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="30dp"
                android:text="Forget Password ?"
                android:textColor="@color/black"
                android:textSize="22dp"
                android:textStyle="bold"
                app:lineHeight="20dp" />

            <TextView
                android:id="@+id/forget_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:text="Don't Worry! It Happens. Please Enter The Address Associated With Your Account" />

            <EditText
                android:id="@+id/forget_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/edit_text"
                android:drawableLeft="@drawable/email"
                android:drawablePadding="20dp"
                android:hint="Email Id"
                android:inputType="textEmailAddress"
                android:padding="12dp"
                android:textColor="#5A63FD"
                android:textColorHint="#333232"
                android:textSize="15dp" />

            <Button
                android:id="@+id/Submit_FORGOT"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="30dp"
                android:padding="12dp"
                android:text="Submit"
                app:backgroundTint="#5A63FD" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>