<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Activity.Feedback">


    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/back"
                android:layout_width="25dp"
                android:layout_height="35dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="0dp"
                android:layout_marginRight="155dp"
                app:srcCompat="@drawable/baseline_arrow_back_24" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="-80dp"
                android:layout_marginTop="10dp"
                android:text="Give Your Feedback"
                android:textColor="#FFF"
                android:textSize="20dp" />
        </LinearLayout>


    </com.google.android.material.appbar.AppBarLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="10dp"
            tools:context=".Activity.Feedback">


            <com.google.android.material.card.MaterialCardView
                android:id="@+id/materialCardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="60dp"
                app:cardBackgroundColor="#FFF"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp"
                app:cardUseCompatPadding="true">

                <ImageView
                    android:id="@+id/feedback"
                    android:layout_width="match_parent"
                    android:layout_height="195dp"
                    android:layout_marginTop="1dp"
                    android:foregroundGravity="center"
                    android:src="@drawable/feedback"
                    tools:layout_editor_absoluteX="121dp"
                    tools:layout_editor_absoluteY="53dp" />

            </com.google.android.material.card.MaterialCardView>



            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/feetback_text1"
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:paddingLeft="25dp"
                android:layout_marginTop="10dp"
                android:text="Feedback"
                android:textColor="#5A63FD"
                android:textSize="35dp"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/feetback_text2"
                android:layout_width="match_parent"
                android:layout_height="41dp"
                android:layout_marginTop="15dp"
                android:paddingLeft="25dp"
                android:text="Your Feedback is important for us"
                android:textColor="#262626"
                android:textSize="17dp"
                android:textStyle="normal" />


<!--            <androidx.appcompat.widget.AppCompatTextView-->
<!--                android:id="@+id/feetback_text3"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="match_parent"-->
<!--                android:paddingLeft="25dp"-->
<!--                android:text="Email"-->
<!--                android:textColor="#262626"-->
<!--                android:layout_marginTop="10dp"-->
<!--                android:textSize="20dp"-->
<!--                android:textStyle="bold"-->
<!--                />-->


            <com.google.android.material.card.MaterialCardView
                android:id="@+id/materialCardView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="-10dp"
                app:cardBackgroundColor="#FFF"
                app:cardCornerRadius="2dp"
                app:cardElevation="8dp"
                app:cardUseCompatPadding="true">
            <TextView
                android:id="@+id/f_email"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:padding="12dp"
                android:layout_margin="3dp"
                android:drawableLeft="@drawable/email"
                android:drawablePadding="7dp"
                android:layout_gravity="center_horizontal"
                android:paddingLeft="25dp"
                android:textColor="#5A63FD"
                android:textColorHint="#333232"
                android:textSize="15dp" />

            </com.google.android.material.card.MaterialCardView>

<!--            <androidx.appcompat.widget.AppCompatTextView-->
<!--                android:id="@+id/feetback_text4"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="match_parent"-->

<!--                android:maxHeight="300dp"-->
<!--                android:paddingLeft="25dp"-->
<!--                android:text="Feedback"-->
<!--                android:textColor="#262626"-->
