<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.Add_Expense_AMT">


    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="left"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/back_member_expense1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/baseline_arrow_back_24" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="120dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/group_add_member_expense1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_margin="7dp"
                    android:text=""
                    android:textColor="#FFF"
                    android:textSize="20dp" />
            </LinearLayout>
        </LinearLayout>

    </com.google.android.material.appbar.AppBarLayout>


    <TextView
        android:id="@+id/group_id_show_ex"
        android:layout_width="match_parent"
        android:layout_height="0dp" />

    <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
        android:id="@+id/dropdown_"
            android:hint="Who Paid"

            app:hintTextColor="@color/black">

            <AutoCompleteTextView
                android:id="@+id/auto_complete_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="none" />
        </com.google.android.material.textfield.TextInputLayout>

    <EditText
        android:id="@+id/enter_expense_name"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginEnd="16dp"
        android:hint="Expenses Name"
        android:paddingLeft="20dp"
        android:drawableLeft="@drawable/edit_icon"
        android:drawablePadding="28dp"
        android:inputType="text"
        android:layout_marginStart="15dp"
        android:background="@drawable/edit_text"
        />

    <EditText
        android:id="@+id/enter_amt"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:hint="Enter Amount"
        android:paddingLeft="20dp"
        android:drawableLeft="@drawable/rupee_1"
        android:drawablePadding="28dp"
        android:inputType="phone"
        android:layout_marginStart="15dp"
        android:background="@drawable/edit_text"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnaddexpenses"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:backgroundTint="#5A63FD"
        android:padding="15dp"
        android:layout_marginStart="15dp"
        android:text="Next"
        android:background="@drawable/edit_text"
        android:textColor="#fff" />

</LinearLayout>