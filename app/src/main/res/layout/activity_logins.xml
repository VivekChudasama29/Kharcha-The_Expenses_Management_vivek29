<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="horizontal"
    tools:context=".Activity.Logins">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="20dp">

            <ImageView
                android:id="@+id/login_img"
                android:layout_width="wrap_content"
                android:layout_height="169dp"
                android:layout_marginTop="20dp"
                app:srcCompat="@drawable/login" />


            <TextView
                android:id="@+id/login_txt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text="Login To Your Account"
                android:textColor="#E2090909"
                android:textSize="25dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/login_with"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:text="Welcome, Please Enter Your Details"
                android:textColor="#E24A4A4A" />

            <EditText
                android:id="@+id/UserName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/edit_text"
                android:drawableLeft="@drawable/person_"
                android:drawablePadding="@dimen/_20sdp"
                android:hint="Username"
                android:inputType="textEmailAddress"
                android:padding="12dp"
                android:textColor="#5A63FD"
                android:textColorHint="#333232"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/Password_"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/edit_text"
                android:drawableLeft="@drawable/key_"
                android:drawableRight="@drawable/visibility_off"
                android:drawablePadding="28dp"
                android:hint="Enter Your Password"
                android:inputType="textPassword"
                android:padding="12dp"
                android:textColor="#5A63FD"
                android:textColorHint="#333232"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/forgotpass"
                android:layout_width="match_parent"
                android:layout_height="19dp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="10dp"
                android:text="Forgot Password?"
                android:textColor="#0023D4" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/Loginbtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:backgroundTint="#5A63FD"
                android:padding="12dp"
                android:background="@drawable/edit_text"
                android:text="Login"
                android:textColor="#fff" />

            <TextView
                android:id="@+id/txtlogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="12dp"
                android:gravity="center"
                android:text="Don't Have An Account? Register"
                android:textColor="#0023D4" />

        </LinearLayout>
    </ScrollView>
</RelativeLayout>
