<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Kharcha_theExpensesManagement" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#5A63FD</item>
        <item name="colorSecondaryVariant">#5A63FD</item>
        <item name="colorOnSecondary">#FFFFFF</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">#5A63FD</item>
        <item name="android:windowAnimationStyle">@style/animation</item>
        <!-- Customize your theme here. -->

    </style>

    <style name="Line">
        <item name="background">@color/black</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_height">1dp</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_bottom</item>
    </style>

    <style name="MyRatingBar" parent="Widget.AppCompat.RatingBar">
        <!-- Non selected star color -->
        <item name="colorControlNormal">#40000000</item>
        <!-- selected star color -->
        <item name="colorControlActivated">@color/light_yellow</item>
    </style>

    <style name="Theme.Kharcha_theExpensesManagement.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Kharcha_theExpensesManagement.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Kharcha_theExpensesManagement.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="animation">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>
</resources>